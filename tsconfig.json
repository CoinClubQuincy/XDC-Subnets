{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node",
      "mocha",
      "chai",
      "hardhat",
      "@nomicfoundation/hardhat-ethers",
      "@nomicfoundation/hardhat-ethers-chai-matchers"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts",
    "test",
    "contracts",
    "typechain-types",
    "tasks"
  ]
}